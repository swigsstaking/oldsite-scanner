[Unit]
Description=Old .ch scanner - Fetch domains via AXFR
Before=oldsites-scan.service

[Service]
Type=oneshot
User=www-data
Group=www-data
WorkingDirectory=/opt/oldsite-scanner
Environment="PATH=/opt/oldsite-scanner/venv/bin"
ExecStart=/opt/oldsite-scanner/venv/bin/python -m backend.fetch_ch_domains

# Ne pas échouer si la récupération échoue (on garde l'ancien fichier)
SuccessExitStatus=0 1
